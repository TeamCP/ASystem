<Window x:Class="ASystem.NoConnectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="230" Width="350" ResizeMode="NoResize" WindowStyle="None" AllowsTransparency="True" BorderThickness="1" BorderBrush="Gray" WindowStartupLocation="CenterScreen" Icon="myIcon.ico">
    <Grid>
        <Border BorderBrush="Transparent" BorderThickness="50"  MouseLeftButtonDown="Border_MouseLeftButtonDown"/>
        <StackPanel>
            <Label HorizontalAlignment="Left">Ошибка подключения</Label>

            <TextBlock TextWrapping="Wrap" Margin="10,30,10,10">Проверьте подключение и нажмите "Повторить попытку", либо запустите программу в "Автономном режиме"</TextBlock>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Margin="10" MinWidth="120">Повторить попытку</Button>
                <Button Name="btb_OfflineProgramm" Margin="10" MinWidth="120" Click="btb_OfflineProgramm_Click">Автономный режим</Button>
            </StackPanel>

            <Line X1="25" X2="325" Y1="10" Y2="10" Stroke="Black" StrokeThickness="1"></Line>
            <Button Name="btn_Out" HorizontalAlignment="Center" Margin="15" Click="btn_Out_Click">Выход</Button>
        </StackPanel>

    </Grid>
</Window>
